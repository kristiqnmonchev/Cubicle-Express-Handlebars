
    <main>
      <h1>{{cubes.name}}</h1>
      <img class="cube" src={{cubes.imageUrl}}>
      <div class="details">
        <p><span>Description:</span> {{cubes.description}}</p>
        <p><span>Difficulty level:</span> {{cubes.difficultyLevel}}</p>
        <a class="btn" href="/">Back</a>
        <a class="btn" href="/cubes/{{cubes._id}}/accessories">Attach accessories</a>
      </div>
    </main>
        <h2>Accessories</h2>
        {{#each cubes.accessories}}
            <div class="accessories">
                <div class="accessory">
                    <img src="{{imageUrl}}" alt="stickerName">
                    <h3>{{name}}</h3>
                    <p>{{description}}</p>
                </div>
                {{else}}
                <h3>No Accessories attached</h3>
        {{/each}}
            </div>
